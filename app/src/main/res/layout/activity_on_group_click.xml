<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/headerMembers"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/holo_blue_light"
        android:fontFamily="@font/schoolbell"
        android:text="SMART AGENDA"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/leaveButton"
        android:layout_width="141dp"
        android:layout_height="54dp"
        android:layout_marginBottom="32dp"
        android:background="@android:color/holo_blue_light"
        android:fontFamily="@font/schoolbell"
        android:onClick="onLeaveGroupClicked"
        android:text="LEAVE GROUP"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/member1TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/headerMembers"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:height="60dp"
        android:text="member1"
        android:textSize="30sp"
        android:fontFamily="@font/schoolbell"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="260dp" />
    <TextView
        android:id="@+id/membersTV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="members"
        android:textSize="30sp"
        android:fontFamily="@font/schoolbell"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/member1TV"
        app:layout_constraintBottom_toTopOf="@+id/leaveButton"
        tools:layout_editor_absoluteX="174dp" />

</androidx.constraintlayout.widget.ConstraintLayout>