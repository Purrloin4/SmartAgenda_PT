<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginTxt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalActivity">


    <TextView
        android:id="@+id/logoTxt1"
        android:layout_width="422dp"
        android:layout_height="71dp"
        android:background="#9C27B0"
        android:fontFamily="@font/schoolbell"
        android:text="    SmartAgenda"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/personalTxt"
        android:layout_width="219dp"
        android:layout_height="71dp"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/schoolbell"
        android:onClick="onAccountBtn_Clicked"
        android:text="personal schedule"
        android:textAllCaps="false"
        android:textColor="#9C27B0"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoTxt1" />

    <Button
        android:id="@+id/accountBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-95dp"
        android:layout_marginTop="-60dp"
        android:background="#90000000"
        android:foreground="@drawable/usericon2"
        android:onClick="onAccountBtn_Clicked"
        app:layout_constraintStart_toEndOf="@+id/logoTxt1"
        app:layout_constraintTop_toBottomOf="@+id/logoTxt1" />

</androidx.constraintlayout.widget.ConstraintLayout>